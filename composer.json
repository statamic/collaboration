{
    "name": "statamic/collaboration",
    "type": "statamic-addon",
    "description": "Collaboration tools for Statamic 3",
    "license": "proprietary",
    "require": {
        "statamic/cms": "3.1.* || 3.2.* || 3.3.*",
        "pixelfear/composer-dist-plugin": "^0.1.4"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Statamic\\Collaboration\\ServiceProvider"
            ]
        },
        "statamic": {
            "name": "Collaboration",
            "description": "Collaboration tools"
        },
        "download-dist": {
            "url": "https://github.com/statamic/collaboration/releases/download/{$version}/dist.tar.gz",
            "path": "dist"
        }
    },
    "autoload": {
        "psr-4": {
            "Statamic\\Collaboration\\": "src"
        }
    }
}
